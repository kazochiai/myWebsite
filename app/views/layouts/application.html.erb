			<section class="round">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
			</section>
			
			<div class="span12" style="padding-top:20px"> 
				<%= yield %>
			</div>
		</div>
		<div id="footer">
