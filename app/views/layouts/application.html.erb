				<a class="brand" href="">Kazuhito Ochiai</a>
					<ul id="navigationBar" class="nav">
						<li id="tab1"><%=link_to "Blog",root_path %></li>
						<li id="tab2"><%=link_to "Projects", projects_path %></li>
						<li id="tab3"><%=link_to "About", about_path %></li>
						<li id="tab4"><%=link_to "Contact", contact_path %></li>
					</ul>
					
				<!-- drop down menu -->	
				<ul class="nav pull-right">
				
				<li class="divider-vertical"></li>
			
				
				<% if signed_in? %>
						<li id="signOut" ><%= link_to current_user.name, signout_path, :method => :delete %></li> 
				<% else %>
						<li id="signIn"><%= link_to "Sign in", signin_path %></li>	
				<% end %>
				
				
